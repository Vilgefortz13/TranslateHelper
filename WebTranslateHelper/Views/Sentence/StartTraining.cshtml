@model WebTranslateHelper.Models.Entities.Sentence

<h1>Start!</h1>
<div class="mt-3 mb-3">@Model.NativeSentence</div>

<form method="post">
    <input type="hidden" name="Id" value="@Model.ForeignSentence" />
    <div class="mt-3">
        <label class="form-label">Foreign Sentence</label>
        <input type="text" class="form-control" name="foreignSentence" asp-action="StartTraining" />
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Send</button>
    </div>
</form>