@model WebTranslateHelper.Models.AddSentenceWithModel

<h1>Add Sentence</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Foreign Sentence</label>
        <input type="text" class="form-control" asp-for="ForeignSentence" />
    </div>

    <div class="mt-3">
        <label class="form-label">Native Sentence</label>
        <input type="text" class="form-control" asp-for="NativeSentence" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
